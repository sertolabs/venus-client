{
  "manifest_version": 2,
  "name": "ConsenSys Identity Wallet",
  "description": "A wallet extension for Trust Agency and SSI",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "favicon.png",
    "default_title": "Identity Wallet",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["./content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab"],
  "content_security_policy": "script-src 'self' 'unsafe-inline'; object-src 'self'",
  "web_accessible_resources": ["index.html", "/static/*"]
}
